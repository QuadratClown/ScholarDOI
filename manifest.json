{
  "manifest_version": 3,
  "name": "ScholarDOI",
  "author": "Stuart W D Grieve",
  "version": "0.3",

  "content_scripts": [
    {
      "matches":        ["https://*/*"],
      "include_globs":  ["https://scholar.google.*/scholar?*"],
      "js": ["src/third-party/jquery-3.4.0.min.js", "src/content.js"]
    }
  ],
  "permissions": [
   "https://api.crossref.org/*"
 ]

}
